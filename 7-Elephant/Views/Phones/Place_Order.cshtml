@model _7_Elephant.Phone

@{
    ViewBag.Title = "Place_Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Place_Order</h2>

@using (Html.BeginForm("AddOrder", "Orders", FormMethod.Post))
{

    <div>
        <h4>Phone</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.brand)
